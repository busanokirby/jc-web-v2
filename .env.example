# JC Icons Management System - Environment Configuration
# Copy this file to .env and update the values for your environment

# === REQUIRED ===

# Secret key for Flask session encryption - MUST be set and should be a random string
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-change-this-to-a-random-value

# === FLASK CONFIGURATION ===

# Environment: development, testing, or production
FLASK_ENV=development

# Enable/disable Flask debug mode
# For production, set to False
FLASK_DEBUG=true

# Server host and port (only used with run.py, not with Gunicorn)
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# === DATABASE ===

# For production, set DATABASE_URL to your external database
# Examples:
#   PostgreSQL: postgresql://user:password@localhost:5432/jc_icons
#   MySQL: mysql://user:password@localhost:3306/jc_icons
# Only required if FLASK_ENV=production
# DATABASE_URL=

# === ADMIN USER ===

# Initial admin password (used on first database initialization)
# Change after first login
ADMIN_PASSWORD=admin123

# === SECURITY ===

# Set to True in production to enforce HTTPS only
# SESSION_COOKIE_SECURE=false

# === LOGGING ===

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# LOG_LEVEL=INFO

# === FEATURES ===

# Feature flags can be set here or managed through admin settings UI
# FEATURE_POS_ENABLED=true
# FEATURE_SALES_CAN_EDIT_INVENTORY=true
# FEATURE_TECH_CAN_VIEW_DETAILS=true
